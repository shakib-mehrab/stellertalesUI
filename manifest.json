    "share_target": {
        "action": "/share-progress",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+stellartales",
            "url": "/handle-protocol?url=%s"
        }
    ],
    "prefer_related_applications": false,
    "related_applications": [],
    "serviceworker": {
        "src": "sw.js",
        "scope": "/",
        "update_via_cache": "imports"
    },
    "gcm_sender_id": "stellartales-notifications",
    "gcm_user_visible_only": true,
    "permissions": [
        "notifications",
        "background-sync",
        "periodic-background-sync"
    ],
    "features": [
        "Cross Origin Embedder Policy",
        "Cross Origin Opener Policy",
        "Service Worker",
        "Background Sync",
        "Push API",
        "Web Share API",
        "Web Speech API",
        "IndexedDB"
    ]
